<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/LogOut"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:padding="16dp"
        android:text="@string/select_your_institute"
        android:textAllCaps="true"
        android:textColor="@color/Crimson"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/insNameSpin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="15dp"
        android:background="@color/Silver" />

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/tvregnm"
        android:layout_marginTop="21dp"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="@string/registration_number"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#fff" />


    <Button
        android:id="@+id/LogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center_horizontal"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:paddingLeft="48dp"
        android:paddingRight="48dp"
        android:text="LogOut"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/DarkRed"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="50dp"
        android:text="@string/choose_your_institute_here"
        android:textColor="@color/Crimson" />

    <TextView
        android:id="@+id/tvregnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insNameSpin"
        android:layout_marginTop="60dp"
        android:text="@string/enter_your_institute_reg_number_here"
        android:textColor="@color/Crimson" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="12dp"
        android:layout_toStartOf="@+id/LogOut"
        android:background="@drawable/background_login_two"
        android:text="Go>>"
        android:textColor="@color/GhostWhite" />


</RelativeLayout>