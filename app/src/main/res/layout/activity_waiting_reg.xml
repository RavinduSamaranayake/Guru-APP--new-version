<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="18dp"
    android:paddingRight="18dp"
    android:paddingTop="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_gravity="center_horizontal"
        android:layout_marginTop="23dp"
        android:padding="16dp"
        android:text="@string/select_your_institute"
        android:textAllCaps="true"
        android:textColor="@color/Crimson"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Spinner
        android:id="@+id/insNameSpin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView12"
        android:layout_marginTop="15dp"
        android:background="@color/Silver" />

    <Spinner
        android:id="@+id/crsNameSpin"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView13"
        android:layout_marginTop="17dp"
        android:background="@color/Silver" />

    <EditText
        android:id="@+id/reg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvregnm"
        android:layout_marginTop="37dp"
        android:background="#6ef4f4f4"
        android:drawablePadding="78dp"
        android:ems="1"
        android:hint="@string/registration_number"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColorHint="#fff" />


    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"
        android:layout_marginTop="44dp"
        android:text="@string/choose_your_institute_here"
        android:textColor="@color/Crimson" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/insNameSpin"
        android:text="@string/choose_your_course_here"
        android:textColor="@color/Crimson" />


    <TextView
        android:id="@+id/tvregnm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/crsNameSpin"
        android:layout_marginTop="16dp"
        android:text="@string/enter_your_institute_reg_number_here"
        android:textColor="@color/Crimson" />

    <Button
        android:id="@+id/toMainpg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="27dp"
        android:background="@drawable/background_login_two"
        android:text="@string/next2"
        android:textColor="@color/GhostWhite" />




</RelativeLayout>
